<h3>New Song:</h3>

<form action="/songs" class="new-song-form" method="POST">
  <div class="song-name">
    <label for="Name">Name:</label>
    <input type="text" id="Name" name="song[name]">
  </div>

  <div class="artist-name">
    <label for="Artist">Artist:</label>
    <input type="text" id="Artist Name" name="[artist][name]">
  </div>

  <div class="genres">
    <label for="Genres"></label>
    <% @genres.each_with_index do |genre, idx| %>
      <label for="genre<%= idx %>">
        <input type="checkbox" name="[genres][<%= idx %>][name]" value="<%= genre.name %>">
        <%= genre.name %>
      </label>
      <br>
    <% end %>
  </div>




  <input type="submit" value="Create">
</form>