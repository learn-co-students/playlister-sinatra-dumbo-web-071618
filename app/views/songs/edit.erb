<h3>Edit Song: <%= @song.name %></h3>

<form action="/songs/<%= @song.slug %>" class="new-song-form" method="POST">
  <div class="song-name">
    <label for="Name">Name:</label>
    <input type="text" id="Name" name="song[name]" value="<%= @song.name %>">
  </div>

  <div class="artist-name">
    <label for="Artist">Artist:</label>
    <input type="text" id="Artist Name" name="[artist][name]" value="<%= @song.artist.name %>">
  </div>

  <div class="genres">
    <label for="Genres"></label>
    <% @genres.each_with_index do |genre, idx| %>
      <label for="genre<%= idx %>">
        <% if @song.genres.pluck(:name).include?(genre.name)%>
          <input type="checkbox" name="[genres][<%= idx %>][name]" value="<%= genre.name %>" checked>
        <% else %>
          <input type="checkbox" name="[genres][<%= idx %>][name]" value="<%= genre.name %>">
        <% end %>
        <%= genre.name %>
      </label>
      <br>
    <% end %>
  </div>




  <input type="submit" value="Save">
</form>